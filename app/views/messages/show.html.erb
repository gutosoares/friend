<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col s12">
      <div class="card">
        <div class="card-content">
          <p>
            <strong>Author:</strong>
            <%= @message.author %>
          </p>

          <p>
            <strong>Receiver:</strong>
            <%= @message.receiver %>
          </p>

          <p>
            <strong>Description:</strong>
            <%= @message.description %>
          </p>
        </div>
        <div class="card-action">
          <%= link_to 'Edit', edit_message_path(@message) %>
          <%= link_to 'Back', messages_path %>
        </div>
      </div>
    </div>
  </div>
</div>
