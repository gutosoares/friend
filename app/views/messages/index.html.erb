<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col s12 center-align">
      <h1>Listing Messages</h1>
    </div>
  </div>
  <div class="row">
    <div class="col s12">
      <% @messages.each do |message| %>
        <div class="card hoverable">
          <div class="card-content">
            <p><span class="author"><%= message.author %></span></p>
            <p><%= message.description %></p>
            <p class="right-align"><span class="receiver"><%= message.receiver %><span></p>
          </div>
          <div class="card-action">
            <%= link_to 'Show', message %>
            <%= link_to 'Edit', edit_message_path(message) %>
            <%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <%= link_to 'New Message', new_message_path, class: "btn" %>
</div>
