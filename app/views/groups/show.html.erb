<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col s12">
      <div class="card">
        <div class="card-content">
            <h4>Name:</h4>
            <h5><%= @group.name %></h5>
            <%= @group.user.each do |u| %>
              <h6><%= u.name %></h6>
              <h6><%= u.email %></h6>
            <% end %>
        </div>
        <div class="card-action">
          <%= link_to 'Edit', edit_group_path(@group) %>
          <%= link_to 'Back', groups_path %>
        </div>
      </div>
    </div>
  </div>
</div>
